<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

  <persistence-unit name="dbMall">
    <properties>
      <!-- 필수 속성 -->
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3331/complaint?useSSL=false&amp;characterEncoding=UTF-8&amp;useLegacyDatetimeCode=false&amp;createDatabaseIfNotExist=true&amp;allowPublicKeyRetrieval=true"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL55Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="false"/>
      <property name="hibernate.use_sql_comments" value="false"/>

    </properties>
  </persistence-unit>

</persistence>